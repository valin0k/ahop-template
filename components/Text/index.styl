.text
  color #585858
  line-height 2u

  &-red
    color #ff4136

  &-white
    color #fff

  &-subtitle
    font-size 2u
    line-height 3u

  &-title
    font-size 5u
    line-height 6u

    +tablet()
      font-size 6u
      line-height 7u

  &-center
    text-align center

  &-bold
    font-weight 700

  &-justify
    text-align justify

  &-responsive
    +tablet()
      font-size 2.5u
      line-height 4u
